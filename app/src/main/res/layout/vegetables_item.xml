<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/address_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="地区"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/class_text"
        />

    <TextView
        android:id="@+id/class_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="品类"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/low_text"
        app:layout_constraintLeft_toRightOf="@+id/address_text"

        />

    <TextView
        android:id="@+id/low_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最低价"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/height_text"
        app:layout_constraintLeft_toRightOf="@+id/class_text"

        />

    <TextView
        android:id="@+id/height_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最高价"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/low_text"
        app:layout_constraintRight_toLeftOf="@+id/range_text"
        />

    <TextView
        android:id="@+id/range_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="涨跌幅"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/height_text"
        />

</android.support.constraint.ConstraintLayout>