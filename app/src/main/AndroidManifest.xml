<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bibi.wisdom">

    <uses-sdk tools:overrideLibrary="com.guge.imagemodule,
    com.aliyun.alink.business.devicecenter,com.aliyun.iot.breeze.lpbs,
    com.aliyun.alink.page.rn,com.aliyun.iot.aep.component.bundlemanager,
    com.aliyun.alink.sdk.jsbridge.external,com.aliyun.iot.breeze.biz,
    com.aliyun.alink.linksdk.channel.gateway,com.aliyun.alink.linksdk.tmp.extbone,
    com.aliyun.alink.linksdk.tmp,com.aliyun.alink.linksdk.cmp,com.aliyun.iot.aep.sdk.connectchannel,
    com.aliyun.alink.linksdk.channel.mobile,com.aliyun.iot.aep.sdk.apiclient,com.aliyun.iot.aep.sdk.credential,
    com.aliyun.iot.breeze.ota,com.aliyun.iot.breeze.sdk,com.aliyun.iot.ble,com.aliyun.alink.business.devicecenter.extbone,
    alink.rncontainer,com.horcrux.svg,com.facebook.react,com.aliyun.alink.sdk.rn.external,com.vondear.rxtool,
    com.vondear.rxui,com.aliyun.iot.aep.sdk.bridge,com.aliyun.alink.linksdk.alcs,com.aliyun.alink.linksdk.alcs.lpbs,
    com.aliyun.alink.linksdk.channel.core,com.aliyun.alink.external.widget,org.chromium.v8,com.aliyun.alink.linksdk.pah,
    com.facebook" />


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.bibi.wisdom.app.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,icon"
        tools:ignore="GoogleAppIndexingWarning">


        <activity
            android:name="com.bibi.wisdom.LaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WelcomeEntranceActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--首页-->
        <activity
            android:name="com.bibi.wisdom.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!--登录-->
        <activity
            android:name=".user.login.LoginActivity"
            android:screenOrientation="portrait" />
        <!--注册-->
        <activity
            android:name=".user.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <!--找回密码-->
        <activity
            android:name=".user.findpwd.FindPwdActivity"
            android:screenOrientation="portrait" />
        <!--扫码-->
        <activity
            android:name=".ScanActivity"
            android:screenOrientation="portrait" />
        <!--web-->
        <activity
            android:name=".WebPageActivity"
            android:screenOrientation="portrait" />
        <!--设备列表-->
        <activity
            android:name=".main.device.DeviceActivity"
            android:screenOrientation="portrait" />
        <!--添加修改设备-->
        <activity
            android:name=".main.add_device.AddDeviceActivity"
            android:screenOrientation="portrait" />
        <!--关于我们-->
        <activity
            android:name=".AboutUsActivity"
            android:screenOrientation="portrait" />
        <!--维护人员-->
        <activity
            android:name=".main.maintain.maintainlist.MaintainListActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.bibi.wisdom.ProMosaicActivity"></activity>

        <receiver
            android:name=".receiver.PushReceiver"
            android:exported="false"> <!-- 为保证receiver安全，建议设置不可导出，如需对其他应用开放可通过android：permission进行限制 -->
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_OPENED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.push2.action.NOTIFICATION_REMOVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.alibaba.sdk.android.push.RECEIVE" />
            </intent-filter>
        </receiver>


        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
    </application>

</manifest>